<% provide :title, "" %>

<div class = "row">
	<div class = "col-lg-6 col-lg-offset-3 test">
    <div class="voting_canvas">
      <div class = "row">
    		<div class = "col-lg-8 col-lg-offset-1 image-cropper">
    			<img class ="centered" src="../../assets/animal_pictures/<%= @picture.file_name %>" height="300" />
    		</div>
      </div>

       <div class = "row">
        <div class = "col-lg-8 col-lg-offset-2" id="voting_buttons">    
